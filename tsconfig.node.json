{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "types": ["three", "node"],
    "resolveJsonModule": true,                    // Enable importing JSON files if needed
    "allowJs": true 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
